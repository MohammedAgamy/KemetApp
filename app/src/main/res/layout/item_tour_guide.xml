<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_25sdp"
    app:cardCornerRadius="@dimen/_25sdp"
    app:cardElevation="@dimen/_20sdp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tour_guid_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/loadiamge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tour_guid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/load_name"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/tour_guid_image"
            app:layout_constraintBottom_toBottomOf="@id/tour_guid_image"
            app:layout_constraintLeft_toRightOf="@id/tour_guid_image"/>


        <TextView
            android:id="@+id/tour_guid_languege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_name"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="@dimen/_15ssp"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@id/tour_guid_name"
            app:layout_constraintLeft_toLeftOf="@id/tour_guid_name"
            app:layout_constraintRight_toRightOf="@id/tour_guid_name"
           />

        <Button
            android:id="@+id/tour_guid_btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order"
            android:textAllCaps="false"
            android:elevation="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tour_guid_languege"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>