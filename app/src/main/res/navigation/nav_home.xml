<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kemet.kemetapp.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_hotielFragment"
            app:destination="@id/hotielFragment" />
        <action
            android:id="@+id/action_homeFragment_to_civilizationFragment"
            app:destination="@id/civilizationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tourGuideFragment"
            app:destination="@id/tourGuideFragment" />
        <action
            android:id="@+id/action_homeFragment_to_carFragment"
            app:destination="@id/carFragment" />
    </fragment>
    <fragment
        android:id="@+id/hotielFragment"
        android:name="com.kemet.kemetapp.ui.fragment.HotielFragment"
        android:label="fragment_hotiel"
        tools:layout="@layout/fragment_hotiel" >
        <action
            android:id="@+id/action_hotielFragment_to_hotelInformationFragment"
            app:destination="@id/hotelInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/civilizationFragment"
        android:name="com.kemet.kemetapp.ui.fragment.CivilizationFragment"
        android:label="fragment_civilization"
        tools:layout="@layout/fragment_civilization" >
        <action
            android:id="@+id/action_civilizationFragment_to_civilizationInformationFragment"
            app:destination="@id/civilizationInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kemet.kemetapp.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"
        >
        <action
            android:id="@id/profileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.kemet.kemetapp.ui.fragment.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/tourGuideFragment"
        android:name="com.kemet.kemetapp.ui.fragment.TourGuideFragment"
        android:label="fragment_tour_guide"
        tools:layout="@layout/fragment_tour_guide" />
    <fragment
        android:id="@+id/hotelInformationFragment"
        android:name="com.kemet.kemetapp.ui.fragment.HotelInformationFragment"
        android:label="fragment_hotel_information"
        tools:layout="@layout/fragment_hotel_information">
        <action
            android:id="@+id/action_hotelInformationFragment_to_showAllRoomFragment"
            app:destination="@id/showAllRoomFragment" />
    </fragment>
    <fragment
        android:id="@+id/civilizationInformationFragment"
        android:name="com.kemet.kemetapp.ui.fragment.civilizationInformationFragment"
        android:label="fragment_civilization_information"
        tools:layout="@layout/fragment_civilization_information" />
    <fragment
        android:id="@+id/carFragment"
        android:name="com.kemet.kemetapp.ui.fragment.CarFragment"
        android:label="fragment_car"
        tools:layout="@layout/fragment_car" />
    <fragment
        android:id="@+id/showAllRoomFragment"
        android:name="com.kemet.kemetapp.ui.fragment.ShowAllRoomFragment"
        android:label="fragment_show_all_room"
        tools:layout="@layout/fragment_show_all_room" />
</navigation>